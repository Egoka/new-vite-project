{
  "name": "@egorkas/vite-components",
  "version": "0.0.7",
  "type": "module",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/vue-component-npm-example.umd.cjs",
  "module": "./dist/vue-component-npm-example.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vue-component-npm-example.js",
      "require": "./dist/vue-component-npm-example.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "patch": "npm version patch",
    "build": "NODE_ENV=production rollup -c",
    "preview": "vite preview",
    "pack": "cd dist && npm pack --pack-destination='../'",
    "format": "prettier --write \"**/*.{js,vue,d.ts}\" --cache",
    "format:check": "prettier --check \"**/*.{js,vue,d.ts}\"",
    "lint": "eslint --fix .",
    "lint:fix": "eslint --fix --ext \".js,.vue\" --ignore-path .gitignore .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css,scss,vue}": "prettier --write",
    "*.{css, scss, vue}": "stylelint --fix"
  },
  "peerDependencies": {
    "tailwindcss": "^3",
    "vue": "^3.3.x"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.24.1",
    "@babel/preset-env": "^7.24.4",
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.3",
    "@semantic-release/npm": "^12.0.1",
    "@types/node": "^18.19.31",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/compiler-sfc": "^3.4.27",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.2.0",
    "eslint-plugin-vue": "^9.26.0",
    "fs-extra": "^11.2.0",
    "husky": "^9.0.11",
    "path": "^0.12.7",
    "postcss": "^8.4.38",
    "postcss-preset-env": "^9.5.12",
    "prettier": "^3.3.2",
    "rollup": "^4.18.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "rollup-plugin-vue": "^6.0.0",
    "semantic-release": "^24.0.0",
    "tailwindcss": "^3.4.3",
    "tslib": "^2.6.2",
    "tsup": "8.0.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.0",
    "vite": "^5.2.0",
    "vue-tsc": "^2.0.6"
  },
  "dependencies": {
    "@heroicons/vue": "^2.1.3",
    "clsx": "^2.1.1",
    "graceful-fs": "^4.2.11",
    "i": "^0.3.7",
    "npm": "^10.8.2",
    "postcss-selector-parser": "^6.0.16",
    "rollup-plugin-auto-external": "^2.0.0",
    "sass": "^1.77.5",
    "tailwind-merge": "^2.3.0"
  }
}
